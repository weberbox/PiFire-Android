<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        android:layout="@layout/preference_cat"
        app:title="@string/settings_cat_cycle">

        <Preference
            android:layout="@layout/preference_cat_info"
            app:summary="@string/settings_pmode_info_one"
            app:title="@string/settings_info"/>

        <com.weberbox.pifire.ui.views.preferences.EditTextPreferenceSocket
            app:defaultValue="@string/def_pmode_auger_on"
            app:key="@string/prefs_work_auger_on"
            app:title="@string/settings_pmode_auger_on"
            app:useSimpleSummaryProvider="true" />

        <com.weberbox.pifire.ui.views.preferences.EditTextPreferenceSocket
            app:defaultValue="@string/def_pmode_auger_on"
            app:key="@string/prefs_work_auger_off"
            app:title="@string/settings_pmode_auger_off"
            app:useSimpleSummaryProvider="true" />

        <Preference
            android:layout="@layout/preference_cat_info"
            app:summary="@string/settings_pmode_info_two"
            app:title="@string/settings_info"/>

        <Preference
            android:layout="@layout/preference_cat_note"
            app:summary="@string/settings_pmode_note"
            app:title="@string/settings_note">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="@string/def_pmode_link" />
        </Preference>

        <com.weberbox.pifire.ui.views.preferences.ListPreferenceSocket
            app:defaultValue="@string/def_pmode_mode"
            app:entries="@array/pmode_entries"
            app:entryValues="@array/pmode_values"
            app:key="@string/prefs_work_pmode_mode"
            app:title="@string/settings_pmode_mode"
            app:useSimpleSummaryProvider="true" />

        <Preference
            app:key="@string/prefs_work_pmode_table"
            app:summary="@string/settings_pmode_summary"
            app:title="@string/settings_pmode_table" />

    </PreferenceCategory>

    <PreferenceCategory
        android:layout="@layout/preference_cat"
        app:title="@string/settings_cat_splus">

        <com.weberbox.pifire.ui.views.preferences.SwitchPreferenceCompatSocket
            app:defaultValue="@bool/def_splus_enabled"
            app:key="@string/prefs_work_splus_enabled"
            app:title="@string/settings_splus_enabled" />

        <Preference
            android:layout="@layout/preference_cat_note"
            app:summary="@string/settings_splus_note"
            app:title="@string/settings_note" />

        <com.weberbox.pifire.ui.views.preferences.SwitchPreferenceCompatSocket
            app:defaultValue="@bool/def_splus_fan_ramp"
            app:key="@string/prefs_work_splus_fan_ramp"
            app:title="@string/settings_splus_fan_ramp" />

        <Preference
            android:layout="@layout/preference_cat_note"
            app:summary="@string/settings_splus_fan_ramp_note"
            app:title="@string/settings_note" />

        <com.weberbox.pifire.ui.views.preferences.EditTextPreferenceSocket
            app:defaultValue="@string/def_splus_ramp_dc"
            app:key="@string/prefs_work_splus_ramp_dc"
            app:title="@string/settings_splus_ramp_dc"
            app:useSimpleSummaryProvider="true" />

        <com.weberbox.pifire.ui.views.preferences.EditTextPreferenceSocket
            app:defaultValue="@string/def_splus_on_time"
            app:key="@string/prefs_work_splus_on_time"
            app:title="@string/settings_splus_on_time"
            app:useSimpleSummaryProvider="true" />

        <com.weberbox.pifire.ui.views.preferences.EditTextPreferenceSocket
            app:defaultValue="@string/def_splus_off_time"
            app:key="@string/prefs_work_splus_off_time"
            app:title="@string/settings_splus_off_time"
            app:useSimpleSummaryProvider="true" />

        <com.weberbox.pifire.ui.views.preferences.EditTextPreferenceSocket
            app:defaultValue="@string/def_splus_min"
            app:key="@string/prefs_work_splus_min"
            app:title="@string/settings_splus_min"
            app:useSimpleSummaryProvider="true" />

        <com.weberbox.pifire.ui.views.preferences.EditTextPreferenceSocket
            app:defaultValue="@string/def_splus_max"
            app:key="@string/prefs_work_splus_max"
            app:title="@string/settings_splus_max"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory
        android:layout="@layout/preference_cat"
        app:title="@string/settings_cat_cntrlr_pid">

        <Preference
            app:key="@string/prefs_work_pid"
            app:summary="@string/settings_pid_cntrlr_summary"
            app:title="@string/settings_pid_cntrlr_title" />

    </PreferenceCategory>

    <PreferenceCategory
        android:layout="@layout/preference_cat"
        app:key="@string/prefs_work_lid_open_cat"
        app:title="@string/settings_cat_lid_detection">

        <com.weberbox.pifire.ui.views.preferences.SwitchPreferenceCompatSocket
            app:defaultValue="@bool/def_auto_lid_detect"
            app:key="@string/prefs_work_lid_open_detect"
            app:title="@string/settings_lid_open_enabled" />

        <com.weberbox.pifire.ui.views.preferences.EditTextPreferenceSocket
            app:defaultValue="@string/def_lid_open_thresh"
            app:key="@string/prefs_work_lid_open_thresh"
            app:title="@string/settings_lid_open_thresh"
            app:useSimpleSummaryProvider="true" />

        <com.weberbox.pifire.ui.views.preferences.EditTextPreferenceSocket
            app:defaultValue="@string/def_lid_open_pause"
            app:key="@string/prefs_work_lid_open_pause"
            app:title="@string/settings_lid_open_pause"
            app:useSimpleSummaryProvider="true" />

        <Preference
            android:layout="@layout/preference_cat_note"
            app:summary="@string/settings_lid_open_note"
            app:title="@string/settings_note" />

    </PreferenceCategory>

    <PreferenceCategory
        android:layout="@layout/preference_cat"
        app:title="@string/settings_cat_keep_warm">

        <com.weberbox.pifire.ui.views.preferences.SwitchPreferenceCompatSocket
            app:defaultValue="@bool/def_keep_warm_s_plus"
            app:key="@string/prefs_work_keep_warm_s_plus"
            app:title="@string/settings_keep_warm_s_plus" />

        <com.weberbox.pifire.ui.views.preferences.EditTextPreferenceSocket
            app:defaultValue="@string/def_keep_warm_temp"
            app:key="@string/prefs_work_keep_warm_temp"
            app:title="@string/settings_keep_warm_temp"
            app:useSimpleSummaryProvider="true" />

        <Preference
            android:layout="@layout/preference_cat_note"
            app:summary="@string/settings_keep_warm_note"
            app:title="@string/settings_note" />

    </PreferenceCategory>
</PreferenceScreen>