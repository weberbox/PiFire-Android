<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pellets_cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryLight">

    <View
        android:id="@+id/card_header_btn"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/bg_card_view_header"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/card_header_icon"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_margin="@dimen/default_spacing"
        android:contentDescription="@string/placeholder_img"
        android:src="@drawable/ic_pellet_edit"
        app:layout_constraintBottom_toBottomOf="@+id/card_header_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/card_header_title"
        style="@style/Text18AllerNormal"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_margin="@dimen/default_spacing"
        android:gravity="center"
        android:text="@string/pellets_brands"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/card_header_btn"
        app:layout_constraintStart_toEndOf="@+id/card_header_icon"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/card_header_button"
        style="@style/Text15Aller"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_spacing"
        android:background="@drawable/bg_ripple_grey_button"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:padding="8dp"
        android:text="@string/pellets_add"
        app:layout_constraintBottom_toBottomOf="@+id/card_header_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.skydoves.androidveil.VeilRecyclerFrameView
        android:id="@+id/pellets_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constrainedHeight="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_header_btn"
        app:veilFrame_baseAlpha="0.6"
        app:veilFrame_baseColor="@color/colorLighterGrey"
        app:veilFrame_highlightAlpha="1.0"
        app:veilFrame_highlightColor="@color/placeholderColor"
        app:veilFrame_layout="@layout/item_pellets_list"
        app:veilFrame_radius="10dp"
        app:veilFrame_shimmerEnable="true"
        app:veilFrame_veiled="true" />

    <View
        android:id="@+id/pellets_view_all_shadow"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="-45dp"
        android:alpha="0.5"
        android:background="@drawable/bg_grey_gradient_270"
        android:clickable="false"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pellets_recycler" />

    <TextView
        android:id="@+id/pellets_view_all"
        style="@style/Text15Aller"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:alpha="0.5"
        android:background="@drawable/bg_ripple_view_all"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:text="@string/view_all"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pellets_view_all_shadow" />

</androidx.constraintlayout.widget.ConstraintLayout>
