<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dash_recipe_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dash_margin"
    android:layout_marginTop="@dimen/dash_margin"
    android:layout_marginEnd="@dimen/dash_margin"
    android:background="@drawable/bg_ripple_table"
    android:clickable="true"
    android:focusable="true"
    android:paddingStart="@dimen/dash_padding_start"
    android:paddingTop="@dimen/dash_padding_top"
    android:paddingEnd="@dimen/dash_padding_end"
    android:paddingBottom="@dimen/dash_padding_bottom"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <TextView
        android:id="@+id/dash_recipe_info"
        style="@style/Text16AllerBold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dash_recipe_info"
        android:textSize="@dimen/dash_text_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/dash_recipe_mode_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dash_half_margin"
        android:paddingBottom="@dimen/dash_half_margin"
        app:layout_constraintEnd_toStartOf="@+id/dash_recipe_step_container"
        app:layout_constraintHorizontal_weight="1.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dash_recipe_info">

        <TextView
            android:id="@+id/dash_recipe_mode"
            style="@style/Text16AllerAlpha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dash_recipe_mode"
            android:textSize="@dimen/dash_text_title"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/dash_recipe_mode_text"
            style="@style/Text16AllerAlpha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/dash_half_margin"
            android:textSize="@dimen/dash_text_title"
            app:layout_constraintStart_toEndOf="@+id/dash_recipe_mode"
            tools:text="@string/grill_mode_hold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/dash_recipe_step_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dash_half_margin"
        android:paddingBottom="@dimen/dash_half_margin"
        app:layout_constraintEnd_toStartOf="@+id/dash_recipe_status_container"
        app:layout_constraintHorizontal_weight=".8"
        app:layout_constraintStart_toEndOf="@+id/dash_recipe_mode_container"
        app:layout_constraintTop_toBottomOf="@+id/dash_recipe_info">

        <TextView
            android:id="@+id/dash_recipe_step"
            style="@style/Text16AllerAlpha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dash_recipe_step"
            android:textSize="@dimen/dash_text_title"
            app:layout_constraintStart_toEndOf="@+id/dash_recipe_mode_text" />

        <TextView
            android:id="@+id/dash_recipe_step_text"
            style="@style/Text16AllerAlpha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/dash_half_margin"
            android:textSize="@dimen/dash_text_title"
            app:layout_constraintStart_toEndOf="@+id/dash_recipe_mode"
            tools:text="@string/dash_recipe_number" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/dash_recipe_status_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dash_half_margin"
        android:paddingBottom="@dimen/dash_half_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/dash_recipe_step_container"
        app:layout_constraintTop_toBottomOf="@+id/dash_recipe_info">

        <TextView
            android:id="@+id/dash_recipe_status"
            style="@style/Text16AllerAlpha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dash_recipe_status"
            android:textSize="@dimen/dash_text_title"
            app:layout_constraintStart_toEndOf="@+id/dash_recipe_mode_text" />

        <TextView
            android:id="@+id/dash_recipe_status_text"
            style="@style/Text16AllerAlpha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/dash_half_margin"
            android:textSize="@dimen/dash_text_title"
            app:layout_constraintStart_toEndOf="@+id/dash_recipe_mode"
            tools:text="@string/dash_recipe_running" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>