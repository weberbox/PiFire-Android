<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="?listPreferredItemPaddingLeft"
    android:paddingRight="?listPreferredItemPaddingRight"
    android:paddingBottom="@dimen/medium_spacing">

    <TextView
        android:id="@+id/headers_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/extra_headers_note" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/extra_headers_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/headers_note"
        android:layout_marginTop="10dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/headers_add_button"
        style="@style/HeadersButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/extra_headers_recycler"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        android:text="@string/add_extra_header" />

</RelativeLayout>