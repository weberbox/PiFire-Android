<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="?listPreferredItemPaddingStart"
    android:paddingEnd="?listPreferredItemPaddingEnd"
    android:paddingBottom="@dimen/medium_spacing">

    <TextView
        android:id="@+id/headers_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/extra_headers_note" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/extra_headers_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/headers_note"
        android:layout_marginTop="10dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/headers_add_button"
        style="@style/MaterialButtonPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/extra_headers_recycler"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/bg_ripple_primary_button"
        android:text="@string/add_extra_header"
        app:backgroundTint="@color/dialog_positive_button_color_accent" />

</RelativeLayout>