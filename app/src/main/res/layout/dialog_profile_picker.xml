<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/default_spacing"
    android:background="@drawable/bg_bottom_sheet_dialog">

    <FrameLayout
        android:id="@+id/profile_list_container"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/bg_gray_rounded_alpha">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/profile_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:clipToPadding="false"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:paddingLeft="@dimen/default_spacing"
            android:paddingRight="@dimen/default_spacing"
            android:paddingTop="120dp"
            android:paddingBottom="120dp"/>

        <View
            android:layout_width="16dp"
            android:layout_height="2dp"
            android:layout_gravity="start|center"
            android:background="@color/colorAccent" />

        <View
            android:layout_width="16dp"
            android:layout_height="2dp"
            android:layout_gravity="end|center"
            android:background="@color/colorAccent" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/profile_list_container" >

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/set_profile_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_ripple_grey_button"
            android:layout_marginEnd="16dp"
            android:text="@string/probe_cancel"
            android:visibility="visible"
            style="@style/MainButtonAccent"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/set_profile_load"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_ripple_grey_button"
            android:text="@string/pellets_load"
            style="@style/MainButtonAccent"/>

    </LinearLayout>
</RelativeLayout>