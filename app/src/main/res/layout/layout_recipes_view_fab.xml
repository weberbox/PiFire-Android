<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fab_recipe_actions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/fab_margin"
        android:layout_marginBottom="@dimen/fab_margin"
        android:contentDescription="@string/recipes_actions"
        android:minHeight="56dp"
        android:text="@string/recipes_actions"
        android:textAppearance="@style/Text18AllerBold"
        android:textColor="@color/colorWhite"
        app:backgroundTint="@color/colorAccent"
        app:borderWidth="0dp"
        app:icon="@drawable/ic_menu_options"
        app:iconTint="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:shapeAppearanceOverlay="@style/FabRoundedSquareOverlay" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_run_recipe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:contentDescription="@string/run"
        android:src="@drawable/ic_play"
        android:visibility="invisible"
        app:backgroundTint="@color/colorAccent"
        app:borderWidth="0dp"
        app:fabSize="normal"
        app:layout_constraintBottom_toTopOf="@+id/fab_recipe_actions"
        app:layout_constraintEnd_toEndOf="@+id/fab_recipe_actions"
        app:shapeAppearanceOverlay="@style/FabRoundedSquareOverlay"
        app:tint="@color/colorWhite"
        tools:visibility="visible" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_print_recipe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:contentDescription="@string/print"
        android:src="@drawable/ic_action_print"
        android:visibility="invisible"
        app:backgroundTint="@color/colorAccent"
        app:borderWidth="0dp"
        app:fabSize="normal"
        app:layout_constraintBottom_toTopOf="@+id/fab_run_recipe"
        app:layout_constraintEnd_toEndOf="@+id/fab_run_recipe"
        app:shapeAppearanceOverlay="@style/FabRoundedSquareOverlay"
        app:tint="@color/colorWhite"
        tools:visibility="visible" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_share_recipe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:contentDescription="@string/share"
        android:src="@drawable/ic_action_share"
        android:visibility="invisible"
        app:backgroundTint="@color/colorAccent"
        app:borderWidth="0dp"
        app:fabSize="normal"
        app:layout_constraintBottom_toTopOf="@+id/fab_print_recipe"
        app:layout_constraintEnd_toEndOf="@+id/fab_print_recipe"
        app:shapeAppearanceOverlay="@style/FabRoundedSquareOverlay"
        app:tint="@color/colorWhite"
        tools:visibility="visible" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_delete_recipe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:contentDescription="@string/delete"
        android:src="@drawable/ic_delete"
        android:visibility="invisible"
        app:backgroundTint="@color/colorAccent"
        app:borderWidth="0dp"
        app:fabSize="normal"
        app:layout_constraintBottom_toTopOf="@+id/fab_share_recipe"
        app:layout_constraintEnd_toEndOf="@+id/fab_share_recipe"
        app:shapeAppearanceOverlay="@style/FabRoundedSquareOverlay"
        app:tint="@color/colorWhite"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>