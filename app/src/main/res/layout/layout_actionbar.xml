<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="?android:actionBarSize"
    android:background="@color/colorPrimary">

    <ImageButton
        android:id="@+id/action_bar_nav_button"
        android:layout_width="wrap_content"
        android:layout_height="?android:actionBarSize"
        android:layout_centerVertical="true"
        android:background="@android:color/transparent"
        android:padding="15dp"
        android:src="@drawable/ic_nav_burger"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/action_bar_text"
        style="@style/Text18AllerBold"
        android:layout_width="wrap_content"
        android:layout_height="?android:actionBarSize"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/action_bar_nav_button"
        android:gravity="center|start"
        android:paddingStart="5dp"
        android:paddingTop="15dp"
        android:paddingEnd="15dp"
        android:paddingBottom="15dp"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        tools:ignore="RelativeOverlap"
        tools:text="@string/placeholder_text_view" />

    <ImageButton
        android:id="@+id/action_bar_config_button"
        android:layout_width="wrap_content"
        android:layout_height="?android:actionBarSize"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@android:color/transparent"
        android:padding="15dp"
        android:src="@drawable/ic_menu_settings"
        tools:ignore="ContentDescription" />

</RelativeLayout>