<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/card_header_btn"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/bg_card_view_header"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/card_header_icon"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_margin="@dimen/default_spacing"
        android:contentDescription="@string/placeholder_img"
        android:src="@drawable/ic_tree"
        app:layout_constraintBottom_toBottomOf="@+id/card_header_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/card_header_title"
        style="@style/Text18AllerBold"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_margin="@dimen/default_spacing"
        android:gravity="center"
        android:text="@string/pellets_current_load"
        app:layout_constraintBottom_toBottomOf="@+id/card_header_btn"
        app:layout_constraintStart_toEndOf="@+id/card_header_icon"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/card_header_button"
        style="@style/Text15AllerBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_spacing"
        android:background="@drawable/bg_ripple_grey_button"
        android:clickable="true"
        android:gravity="center"
        android:padding="8dp"
        android:text="@string/pellets_load_new"
        app:layout_constraintBottom_toBottomOf="@+id/card_header_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:focusable="true" />

</androidx.constraintlayout.widget.ConstraintLayout>