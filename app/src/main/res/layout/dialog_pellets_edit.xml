<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/dialog_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.bottomsheet.BottomSheetDragHandleView
            android:id="@+id/drag_handle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/dialog_card_header_title"
            style="@style/Text16AllerBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:text="@string/pellets_editor"
            app:layout_constraintBottom_toTopOf="@+id/dialog_pellets_edit_profile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/dialog_pellets_edit_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/dialog_card_header_title">

            <include
                android:id="@+id/pellets_edit_profile_container"
                layout="@layout/layout_pellets_edit_card" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="@dimen/default_spacing"
            android:paddingTop="@dimen/small_spacing"
            android:paddingEnd="@dimen/default_spacing"
            android:paddingBottom="@dimen/default_spacing"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dialog_pellets_edit_profile">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/delete_button"
                style="@style/MaterialButtonPrimary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_weight="0.33"
                android:background="@drawable/bg_ripple_red_button"
                android:text="@string/delete"
                app:backgroundTint="@color/dialog_positive_button_color_red" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/save_load_button"
                style="@style/MaterialButtonPrimary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_weight="0.33"
                android:background="@drawable/bg_ripple_primary_button"
                android:text="@string/pellets_dialog_load"
                app:backgroundTint="@color/dialog_positive_button_color_grey" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/save_button"
                style="@style/MaterialButtonPrimary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.33"
                android:background="@drawable/bg_ripple_primary_button"
                android:text="@string/save"
                app:backgroundTint="@color/dialog_positive_button_color_grey" />

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>