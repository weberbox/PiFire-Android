<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/dialog_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.bottomsheet.BottomSheetDragHandleView
            android:id="@+id/drag_handle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/dialog_credentials_header_title"
            style="@style/Text16OpenSans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:text="@string/settings_credentials_title"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/dialog_credentials_edit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/dialog_credentials_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            app:layout_constraintTop_toBottomOf="@+id/dialog_credentials_header_title">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/dialog_user_input"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/large_spacing"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="@dimen/large_spacing"
                android:gravity="center"
                android:hint="@string/settings_username"
                android:labelFor="@+id/dialog_user_input_tv"
                android:paddingBottom="5dp"
                android:textColorHint="@color/colorWhite"
                android:theme="@style/ThemeOverlay.AppTheme.TextInputEditText.Outlined"
                app:boxBackgroundColor="@color/colorPrimary"
                app:boxStrokeColor="@color/selector_stroke_color"
                app:endIconTint="@color/colorWhite"
                app:errorEnabled="true"
                app:hintTextColor="@color/colorGreyHint"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/dialog_user_input_tv"
                    style="@style/Text14OpenSans"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/dialog_pass_input"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/large_spacing"
                android:layout_marginEnd="@dimen/large_spacing"
                android:gravity="center"
                android:hint="@string/settings_password"
                android:labelFor="@+id/dialog_pass_input_tv"
                android:paddingBottom="5dp"
                android:textColorHint="@color/colorWhite"
                android:theme="@style/ThemeOverlay.AppTheme.TextInputEditText.Outlined"
                app:boxBackgroundColor="@color/colorPrimary"
                app:boxStrokeColor="@color/selector_stroke_color"
                app:endIconMode="password_toggle"
                app:endIconTint="@color/colorWhite"
                app:errorEnabled="true"
                app:hintTextColor="@color/colorGreyHint"
                app:layout_constraintTop_toBottomOf="@+id/dialog_user_input">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/dialog_pass_input_tv"
                    style="@style/Text14OpenSans"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textPassword" />

            </com.google.android.material.textfield.TextInputLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="@dimen/default_spacing"
            android:paddingTop="@dimen/small_spacing"
            android:paddingEnd="@dimen/default_spacing"
            android:paddingBottom="@dimen/default_spacing"
            android:weightSum="1.0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dialog_credentials_edit">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/delete_button"
                style="@style/MaterialButtonPrimary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_weight="0.5"
                android:background="@drawable/bg_ripple_red_button"
                android:text="@string/delete"
                app:backgroundTint="@color/dialog_positive_button_color_red" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/save_button"
                style="@style/MaterialButtonPrimary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="@drawable/bg_ripple_primary_button"
                android:text="@string/save"
                app:backgroundTint="@color/dialog_positive_button_color_grey" />

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>