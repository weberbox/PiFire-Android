<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/pellet_edit_brand"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:gravity="center"
        android:hint="@string/pellets_brand"
        android:labelFor="@+id/pellet_edit_brand_tv"
        android:textColorHint="@color/colorWhite"
        android:theme="@style/ThemeOverlay.AppTheme.TextInputEditText.Outlined"
        app:boxBackgroundColor="@color/colorPrimaryLight"
        app:boxStrokeColor="@color/selector_stroke_color"
        app:endIconTint="@color/colorWhite"
        app:errorEnabled="true"
        app:hintTextColor="@color/colorGreyHint"
        app:layout_constraintTop_toTopOf="parent">

        <AutoCompleteTextView
            android:id="@+id/pellet_edit_brand_tv"
            style="@style/Text14Aller"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="none" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/pellet_edit_wood"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:gravity="center"
        android:hint="@string/pellets_wood"
        android:labelFor="@+id/pellet_edit_wood_tv"
        android:textColorHint="@color/colorWhite"
        android:theme="@style/ThemeOverlay.AppTheme.TextInputEditText.Outlined"
        app:boxBackgroundColor="@color/colorPrimaryLight"
        app:boxStrokeColor="@color/selector_stroke_color"
        app:endIconTint="@color/colorWhite"
        app:errorEnabled="true"
        app:hintTextColor="@color/colorGreyHint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pellet_edit_brand">

        <AutoCompleteTextView
            android:id="@+id/pellet_edit_wood_tv"
            style="@style/Text14Aller"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="none" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/pellet_edit_rating"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:gravity="center"
        android:hint="@string/pellets_rating"
        android:labelFor="@+id/pellet_edit_wood_tv"
        android:textColorHint="@color/colorWhite"
        android:theme="@style/ThemeOverlay.AppTheme.TextInputEditText.Outlined"
        app:boxBackgroundColor="@color/colorPrimaryLight"
        app:boxStrokeColor="@color/selector_stroke_color"
        app:endIconTint="@color/colorWhite"
        app:errorEnabled="true"
        app:hintTextColor="@color/colorGreyHint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pellet_edit_wood">

        <AutoCompleteTextView
            android:id="@+id/pellet_edit_rating_tv"
            style="@style/Text14Aller"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="none"
            android:textColor="@color/colorAccent" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/pellet_edit_comments"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:gravity="center"
        android:hint="@string/pellets_comments"
        android:labelFor="@+id/pellet_edit_wood_tv"
        android:paddingBottom="20dp"
        android:textColorHint="@color/colorWhite"
        android:theme="@style/ThemeOverlay.AppTheme.TextInputEditText.Outlined"
        app:boxBackgroundColor="@color/colorPrimaryLight"
        app:boxStrokeColor="@color/selector_stroke_color"
        app:endIconTint="@color/colorWhite"
        app:hintTextColor="@color/colorGreyHint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pellet_edit_rating">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/pellet_edit_comments_tv"
            style="@style/Text14Aller"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:minHeight="100dp" />

    </com.google.android.material.textfield.TextInputLayout>

</androidx.constraintlayout.widget.ConstraintLayout>