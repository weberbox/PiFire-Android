<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp"
    app:cardPreventCornerOverlap="false"
    app:contentPadding="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.weberbox.pifire.ui.views.CardViewHeaderButton
            android:id="@+id/recipes_description_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_card_view_header"
            app:header_icon="@drawable/ic_menu_about"
            app:header_title="@string/recipes_header_about"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.skydoves.androidveil.VeilLayout
            android:id="@+id/recipes_about_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryLight"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recipes_description_header"
            app:veilLayout_baseAlpha="0.6"
            app:veilLayout_baseColor="@color/colorLighterGrey"
            app:veilLayout_highlightAlpha="1.0"
            app:veilLayout_highlightColor="@color/colorPlaceholder"
            app:veilLayout_radius="18dp"
            app:veilLayout_shimmerEnable="true"
            app:veilLayout_veiled="true"
            tools:veilLayout_veiled="false">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/recipes_description_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/recipes_author_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        style="@style/Text15AllerBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/default_spacing"
                        android:gravity="center"
                        android:text="@string/recipes_author"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/recipes_author"
                        style="@style/Text15AllerBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/default_spacing"
                        android:gravity="center|start"
                        android:minWidth="@dimen/_60sdp"
                        android:textStyle="normal"
                        tools:text="@string/placeholder_text_view" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/recipes_rating_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/recipes_author_container">

                    <TextView
                        style="@style/Text15AllerBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/default_spacing"
                        android:gravity="center"
                        android:text="@string/recipes_rating" />

                    <me.zhanghai.android.materialratingbar.MaterialRatingBar
                        android:id="@+id/recipes_rating"
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/default_spacing"
                        android:isIndicator="true"
                        android:max="5"
                        android:numStars="5"
                        android:rating="0" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/recipes_prep_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/recipes_rating_container">

                    <TextView
                        style="@style/Text15AllerBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/default_spacing"
                        android:gravity="center"
                        android:text="@string/recipes_prep_time" />

                    <TextView
                        android:id="@+id/recipes_prep_time"
                        style="@style/Text15AllerBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/default_spacing"
                        android:gravity="center|start"
                        android:minWidth="@dimen/_110sdp"
                        android:textStyle="normal"
                        tools:text="@string/placeholder_time" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/recipes_cook_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/recipes_prep_container">

                    <TextView
                        style="@style/Text15AllerBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/default_spacing"
                        android:gravity="center"
                        android:text="@string/recipes_cook_time" />

                    <TextView
                        android:id="@+id/recipes_cook_time"
                        style="@style/Text15AllerBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/default_spacing"
                        android:gravity="center|start"
                        android:minWidth="@dimen/_110sdp"
                        android:textStyle="normal"
                        tools:text="@string/placeholder_time" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/recipes_difficulty_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/recipes_cook_container">

                    <TextView
                        style="@style/Text15AllerBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/default_spacing"
                        android:gravity="center"
                        android:text="@string/recipes_difficulty" />

                    <TextView
                        android:id="@+id/recipes_difficulty"
                        style="@style/Text15AllerBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/default_spacing"
                        android:gravity="center|start"
                        android:minWidth="@dimen/_110sdp"
                        android:textStyle="normal"
                        tools:text="@string/placeholder_text_view" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/recipes_probes_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/recipes_difficulty_container">

                    <TextView
                        style="@style/Text15AllerBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/default_spacing"
                        android:gravity="center"
                        android:text="@string/recipes_probes" />

                    <TextView
                        android:id="@+id/recipes_probes"
                        style="@style/Text15AllerBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/default_spacing"
                        android:gravity="center|start"
                        android:minWidth="@dimen/_110sdp"
                        android:textStyle="normal"
                        tools:text="@string/placeholder_text_view" />

                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.skydoves.androidveil.VeilLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>