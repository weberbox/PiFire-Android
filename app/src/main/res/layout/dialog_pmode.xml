<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="@android:color/transparent"
    android:paddingStart="@dimen/small_spacing"
    android:paddingTop="20dp"
    android:paddingEnd="@dimen/small_spacing">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/dialog_editor_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_bottom_sheet_dialog">

        <com.google.android.material.bottomsheet.BottomSheetDragHandleView
            android:id="@+id/drag_handle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/pmode_header"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="25dp"
            android:orientation="horizontal"
            android:paddingStart="?listPreferredItemPaddingStart"
            android:paddingEnd="?listPreferredItemPaddingEnd"
            android:weightSum="3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                style="@style/TextOpenSans"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:maxLines="1"
                android:padding="6dp"
                android:text="@string/settings_pmode_mode"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                style="@style/TextOpenSans"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:maxLines="1"
                android:padding="6dp"
                android:text="@string/settings_pmode_auger_on"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                style="@style/TextOpenSans"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:maxLines="1"
                android:padding="6dp"
                android:text="@string/settings_pmode_auger_off"
                android:textSize="15sp"
                android:textStyle="bold" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/pmode_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pmode_header"
            android:paddingStart="?listPreferredItemPaddingStart"
            android:paddingEnd="?listPreferredItemPaddingEnd"
            android:paddingBottom="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pmode_header" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>