<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp"
    app:cardPreventCornerOverlap="false"
    app:contentPadding="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.weberbox.pifire.ui.views.CardViewHeaderButton
            android:id="@+id/instructions_card_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:header_icon="@drawable/ic_recipe_instructions"
            app:header_title="@string/recipes_instructions"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryLight"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/instructions_card_header">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/instructions_text_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintBottom_toTopOf="@+id/instructions_recycler_holder"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:visibility="visible"
                    app:checkedState="checked"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/guideline_one"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    style="@style/Text15AllerBold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_6sdp"
                    android:breakStrategy="simple"
                    android:text="@string/recipes_item_direction"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/guideline_two"
                    app:layout_constraintStart_toEndOf="@+id/guideline_one"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    style="@style/Text15AllerBold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_6sdp"
                    android:breakStrategy="simple"
                    android:text="@string/recipes_item_ingredients"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/guideline_three"
                    app:layout_constraintStart_toEndOf="@+id/guideline_two"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    style="@style/Text15AllerBold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:breakStrategy="simple"
                    android:gravity="center"
                    android:text="@string/recipes_item_step"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/guideline_three"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.1" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.60" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.88" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:id="@+id/instructions_recycler_holder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/instructions_text_header">

                <com.skydoves.androidveil.VeilRecyclerFrameView
                    android:id="@+id/recipes_instructions_rv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:veilFrame_baseAlpha="0.6"
                    app:veilFrame_baseColor="@color/colorLighterGrey"
                    app:veilFrame_highlightAlpha="1.0"
                    app:veilFrame_highlightColor="@color/colorPlaceholder"
                    app:veilFrame_layout="@layout/item_recipe_instructions"
                    app:veilFrame_radius="10dp"
                    app:veilFrame_shimmerEnable="true"
                    app:veilFrame_veiled="true" />

                <View
                    android:id="@+id/instructions_view_all_shadow"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="-45dp"
                    android:alpha="0.5"
                    android:background="@drawable/bg_grey_gradient_270"
                    android:clickable="false"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/instructions_view_all"
                    style="@style/Text15AllerBold"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:alpha="0.5"
                    android:background="@drawable/bg_ripple_view_all"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:text="@string/view_all"
                    android:visibility="visible" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>