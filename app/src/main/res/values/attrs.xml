<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="AppTheme">
        <attr name="colorOfflineStatus" format="color" />
    </declare-styleable>

    <declare-styleable name="PelletLevelView">
        <attr name="primary_color" format="color"/>
        <attr name="secondary_color" format="color"/>
        <attr name="initial_value" format="integer"/>
        <attr name="dot_radius" format="integer"/>
    </declare-styleable>

    <declare-styleable name="NavListItem">
        <attr name="nav_selected" format="boolean"/>
        <attr name="nav_adjust_text" format="boolean"/>
        <attr name="nav_icon" format="reference"/>
        <attr name="nav_title" format="string"/>
    </declare-styleable>

    <declare-styleable name="MaxHeightLinearLayout">
        <attr name="max_height" format="dimension" />
    </declare-styleable>

    <declare-styleable name="SwipeButton">
        <attr name="inner_text" format="string"/>
        <attr name="inner_text_color" format="color"/>
        <attr name="inner_text_size" format="dimension"/>
        <attr name="inner_text_left_padding" format="dimension"/>
        <attr name="inner_text_right_padding" format="dimension"/>
        <attr name="inner_text_top_padding" format="dimension"/>
        <attr name="inner_text_bottom_padding" format="dimension"/>
        <attr name="inner_text_background" format="reference"/>
        <attr name="button_image_width" format="dimension"/>
        <attr name="button_image_height" format="dimension"/>
        <attr name="button_trail_enabled" format="boolean"/>
        <attr name="button_trail_drawable" format="reference"/>
        <attr name="button_image_disabled" format="reference"/>
        <attr name="button_image_enabled" format="reference"/>
        <attr name="button_left_padding" format="dimension"/>
        <attr name="button_right_padding" format="dimension"/>
        <attr name="button_top_padding" format="dimension"/>
        <attr name="button_bottom_padding" format="dimension"/>
        <attr name="button_background" format="reference"/>
        <attr name="has_activate_state" format="boolean"/>
        <attr name="initial_state" format="enum">
            <enum name="enabled" value="0"/>
            <enum name="disabled" value="1"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="CardViewHeaderButton">
        <attr name="header_title" format="string" />
        <attr name="button_text" format="string" />
        <attr name="button_enabled" format="boolean"/>
        <attr name="header_icon" format="reference"/>
    </declare-styleable>

    <declare-styleable name="PelletsCardViewRecycler">
        <attr name="pellets_header_title" format="string" />
        <attr name="pellets_button_text" format="string" />
        <attr name="pellets_button_enabled" format="boolean"/>
        <attr name="pellets_header_icon" format="reference"/>
    </declare-styleable>

    <declare-styleable name="PelletsLogsRecycler">
        <attr name="logs_header_title" format="string" />
        <attr name="logs_header_icon" format="reference"/>
    </declare-styleable>

    <declare-styleable name="PelletsEditorRecycler">
        <attr name="editor_header_title" format="string" />
        <attr name="editor_button_text" format="string" />
        <attr name="editor_button_enabled" format="boolean"/>
        <attr name="editor_header_icon" format="reference"/>
    </declare-styleable>

    <declare-styleable name="TextViewRichDrawable">
        <attr name="compoundDrawableWidth" format="dimension"/>
        <attr name="compoundDrawableHeight" format="dimension"/>
        <attr name="drawableStartVector" format="reference" />
        <attr name="drawableTopVector" format="reference" />
        <attr name="drawableEndVector" format="reference" />
        <attr name="drawableBottomVector" format="reference" />
        <attr name="drawableTintRich" format="reference" />
    </declare-styleable>

    <declare-styleable name="DashProbeCard">
        <attr name="dash_probe_title" format="string" />
        <attr name="dash_probe_set_temp" format="boolean" />
        <attr name="dash_probe_icon" format="reference" />
    </declare-styleable>

</resources>