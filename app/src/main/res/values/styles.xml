<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Text20Knockout" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/knockout_regular</item>
    </style>

    <style name="Text24Knockout" parent="Text20Knockout">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Text10Aller" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/aller_font_family</item>
        <item name="fontFamily">@font/aller_font_family</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="Text14Aller" parent="Text10Aller">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text14AllerBold" parent="Text14Aller">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text15Aller" parent="Text10Aller">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Text15AllerBold" parent="Text15Aller">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text16Aller" parent="Text10Aller">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text16AllerBold" parent="Text16Aller">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text16AllerAlpha" parent="Text16Aller">
        <item name="android:textColor">#a6ffffff</item>
    </style>

    <style name="Text18Aller" parent="Text10Aller">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Text18AllerBold" parent="Text18Aller">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text20AllerBold" parent="Text10Aller">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Text16Russo" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/russo_font_family</item>
        <item name="fontFamily">@font/russo_font_family</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="Text18Russo" parent="Text16Russo">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Text18RussoBold" parent="Text18Russo">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextOpenSans" parent="TextAppearance.AppCompat.Title">
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/open_sans_font_family</item>
        <item name="fontFamily">@font/open_sans_font_family</item>
    </style>

    <style name="Text18OpenSans" parent="TextOpenSans">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Text16OpenSans" parent="TextOpenSans">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text14OpenSans" parent="TextOpenSans">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text12OpenSans" parent="TextOpenSans">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Text10OpenSans" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/open_sans_font_family</item>
        <item name="fontFamily">@font/open_sans_font_family</item>
    </style>

    <style name="TextTransparent" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@android:color/transparent</item>
    </style>

    <style name="RoundProgressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressBarStyle">?android:progressBarStyleHorizontal</item>
        <item name="android:indeterminate">false</item>
        <item name="android:progressDrawable">@drawable/bg_round_progress</item>
        <item name="android:rotation">180</item>
    </style>

    <style name="MaterialButtonPrimary" parent="MaterialDialog">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/knockout_regular</item>
        <item name="android:color">@color/colorLightGrey</item>
    </style>

    <style name="BottomSheetDialogFloating" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="bottomSheetStyle">@style/ModalBottomSheetDialog</item>
    </style>

    <style name="BottomSheetDialog" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/ModalBottomSheetDialog</item>
    </style>

    <style name="ModalBottomSheetDialog" parent="Widget.Material3.BottomSheet.Modal">
        <item name="paddingBottomSystemWindowInsets">false</item>
    </style>

    <style name="AlerterButton" parent="Widget.Material3.Button">
        <item name="android:textAppearance">@style/Text15AllerBold</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="FabRoundedSquareOverlay" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">10dp</item>
        <item name="cornerSizeTopRight">10dp</item>
        <item name="cornerSizeBottomRight">10dp</item>
        <item name="cornerSizeBottomLeft">10dp</item>
    </style>

    <style name="AlertDialogThemeMaterial" parent="ThemeOverlay.Material3.Dialog.Alert">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:windowMinWidthMinor">85%</item>
        <item name="android:windowBackground">@drawable/bg_alert_dialog</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyleMaterial</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyleMaterial</item>
        <item name="buttonBarNeutralButtonStyle">@style/NeutralButtonStyleMaterial</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.Material3.Dialog.Alert">
        <item name="android:windowMinWidthMinor">85%</item>
        <item name="android:windowBackground">@drawable/bg_alert_dialog</item>
    </style>

    <style name="NegativeButtonStyleMaterial" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/dialog_button_color</item>
    </style>

    <style name="PositiveButtonStyleMaterial" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/dialog_button_color</item>
    </style>

    <style name="NeutralButtonStyleMaterial" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/dialog_button_color</item>
    </style>

    <style name="MaterialDialog">
        <item name="android:fontFamily">@font/aller_regular</item>
    </style>

    <style name="MaterialDialog.IconButtonText">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">8dp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="MaterialDialog.Title">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/material_dialog_title_text_color</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textSize">@dimen/text_title_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="MaterialDialog.Message">
        <item name="android:textSize">@dimen/text_message_size</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textColor">@color/material_dialog_message_text_color</item>
    </style>

    <style name="MaterialDialog.PositiveButton" parent="Widget.Material3.Button.UnelevatedButton">
        <item name="android:layout_margin">4dp</item>
        <item name="android:letterSpacing">0.025</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="MaterialDialog.NegativeButton" parent="Widget.Material3.Button.OutlinedButton.Icon">
        <item name="android:layout_margin">4dp</item>
        <item name="android:letterSpacing">0.025</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="MaterialDialog.Positive.TextButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:layout_margin">4dp</item>
        <item name="android:letterSpacing">0.025</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="MaterialDialog.Negative.TextButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:layout_margin">4dp</item>
        <item name="android:letterSpacing">0.025</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/material_dialog_negative_text_color</item>
    </style>

    <style name="ThemeOverlay.AppTheme.TextInputEditText.Outlined" parent="">
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

    <style name="TextInputLayoutFilledBox" parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="boxStrokeColor">@color/selector_stroke_color</item>
    </style>

    <style name="TextInputEditTextFilledBox" parent="Widget.Material3.TextInputEditText.FilledBox">
        <item name="android:paddingStart" tools:ignore="NewApi">2dp</item>
        <item name="android:paddingEnd" tools:ignore="NewApi">2dp</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingRight">2dp</item>
    </style>

    <style name="ThemeOverlay.App.Preference" parent="PreferenceThemeOverlay">
        <item name="switchPreferenceCompatStyle">@style/App.Preference.SwitchPreference</item>
    </style>

    <style name="App.Preference.SwitchPreference" parent="Preference.SwitchPreference.Material">
        <item name="android:widgetLayout">@layout/preference_switch</item>
    </style>

    <style name="RecipesActionBar" parent="Widget.Material3.ActionBar.Solid">
        <item name="background">@color/colorRedButton</item>
        <item name="titleTextStyle">@style/Text20AllerBold</item>
    </style>

    <style name="ActionButtonStyle" parent="@android:style/Widget.ActionButton">
        <item name="android:paddingEnd">10dp</item>
    </style>

    <style name="TextInputEditTextFilledSmall" parent="Widget.Material3.TextInputEditText.FilledBox">
        <item name="android:paddingStart" tools:ignore="NewApi">2dp</item>
        <item name="android:paddingEnd" tools:ignore="NewApi">2dp</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/aller_font_family</item>
        <item name="fontFamily">@font/aller_font_family</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

</resources>