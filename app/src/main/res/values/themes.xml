<resources>

    <style name="Theme.PiFire" parent="BaseAppTheme" />
    <style name="Theme.PiFire.Settings" parent="BaseAppSettingsTheme" />
    <style name="Theme.PiFire.Setup" parent="BaseAppSetupTheme" />
    <style name="Theme.PiFire.Recipes" parent="BaseAppRecipesTheme" />

    <style name="Theme.PiFire.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/colorPrimaryDark</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/bg_splash</item>
        <item name="postSplashScreenTheme">@style/Theme.PiFire.NoActionBar</item>
    </style>

    <style name="BaseAppTheme" parent="BaseAppColors">
        <item name="windowActionModeOverlay">true</item>
        <item name="android:actionMenuTextAppearance">@style/Text18AllerBold</item>
        <item name="android:actionModeBackground">@color/colorAccent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:actionButtonStyle">@style/ActionButtonStyle</item>

        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowEnterTransition">@android:transition/slide_left</item>
        <item name="android:windowExitTransition">@android:transition/slide_left</item>
    </style>

    <style name="BaseAppSettingsTheme" parent="BaseAppColors">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="preferenceTheme">@style/ThemeOverlay.App.Preference</item>
        <item name="android:textAppearance">@style/Text14OpenSans</item>
        <item name="android:textAppearanceListItem">@style/Text16OpenSans</item>
        <item name="android:textAppearanceListItemSecondary">@style/Text14OpenSans</item>
        <item name="android:navigationBarColor">@color/colorNavBarAlpha</item>

        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowEnterTransition">@android:transition/slide_right</item>
        <item name="android:windowExitTransition">@android:transition/slide_right</item>
    </style>

    <style name="BaseAppSetupTheme" parent="BaseAppColors">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>

        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowEnterTransition">@android:transition/slide_right</item>
        <item name="android:windowExitTransition">@android:transition/slide_right</item>
    </style>

    <style name="BaseAppRecipesTheme" parent="BaseAppColors">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="actionModeStyle">@style/RecipesActionBar</item>

        <item name="android:navigationBarColor">@color/colorNavBarAlpha</item>
    </style>

    <style name="BaseAppColors" parent="Theme.Material3.Dark">
        <item name="android:windowBackground">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/colorAccent</item>
        <item name="colorPrimaryContainer">@color/colorAccent</item>
        <item name="colorOfflineStatus">@color/colorAccentRed</item>
        <item name="cursorColor">@color/colorAccent</item>
        <item name="android:colorControlActivated">@color/colorAccent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="Theme.PiFire.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.PiFire.AppBarOverlay" parent="ThemeOverlay.Material3.Dark.ActionBar">
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Theme.PiFire.PopupOverlay" parent="ThemeOverlay.Material3.Dark" />
</resources>